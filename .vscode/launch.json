{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Pytest (Current File)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
      "args": ["-m", "pytest", "-k", "${fileBasenameNoExtension}", "-q"],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Debug Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "console": "integratedTerminal"
    }
  ]
}
